<?php
//attempt to connect
require_once('connectAlways.php');

//allows user to create new entry in the customer database
function renderForm($state, $error)
{
  //CAPTURE is a heredoc, which is created by doing <<<HEREDOCNAME
  //to end it, just put HEREDOCNAME at the beginning of a line
  if(isset($error) && $error !== NULL) {

    $error = <<<ERROR
    <div style="padding:4px; border:1px solid red; color:red;">$error</div>
ERROR;
  } 

  else {
    $error = '';
  }
  //<input type=hidden value="1" name="check" /> is dummie variable to check is there a submission/stuff in required fields
$form = <<<CAPTURE
$error

<center><IMG SRC="pictures/map.jpg" ALT="mapPic" WIDTH=600 HEIGHT=400>
<br/><br/>
<center><font face='verdana'>Customers can be viewed based on the state they are listed as. 
  Your input will dictate the customers shown. </font></center>
<br/>
<br/>

<form id="stateCustQuery" method="post">
  <div> 
    <input type=hidden value="1" name="check" />
    <font face="verdana">
    Please input the two letter state abbreviation you would like the view the customers by:<input size="5" type="text" name="state" required/> 
    </font>
  </br></br><br/>
  <button type="button" onclick="resetForm()" id="clearentries" class="submitButton" style="border:none">Clear Entries</button>
  <button type="submit" form="stateCustQuery" class="submitButton" style="border:none">Submit</button>
  </div>
  <br/><HR WIDTH="60%" NOSHADE>
</form>
  <script>
    function resetForm() {
      document.getElementById("stateCustQuery").reset();
    }
  </script>
</center>
<br/>

CAPTURE;

  return $form;
} ?>

