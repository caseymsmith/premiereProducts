<?php
//get form data, making sure it's valid
if(isset($_POST['check'])){
  $state=mysql_real_escape_string(htmlspecialchars($_POST['state']));

//verifies field has an entry
if($state=='' )
{
//generate error message
$error='ERROR: Please enter a state abbreviation!';
//if any field is blank, form is redisplayed. 
echo renderForm($state, $error);
 } 

else if(strlen($state)>'2'){
//generate error message
$error='ERROR: The state letters you input is invalid! Please enter a 2 letter state abbreviation!';
//redisplay the form
echo renderForm($state, $error);
}
else if(is_numeric($state)){
//generate error message
$error='ERROR: The state letters you input is invalid! Please enter a 2 letter state abbreviation!';
//redisplay the form
echo renderForm($state, $error);
}

else{

$query = "SELECT * FROM CUSTOMER WHERE STATE='$state'";
if ($r = mysql_query($query))
{
  if(mysql_num_rows($r)>0){

    print '<b><center><font face="verdana">Here are the customers for the state of '.$state.'</center></b><br/>';

    // output the resulting query table
print'<table align="center" cellspacing="8">';
print '<tr>'; 
print '<td><b>Customer No.</b></td>'; 
echo '<td>&nbsp;</td>';
print '<td align="center"><b>Customer Name</b></td>'; 
echo '<td>&nbsp;</td>';
print '<td align="center"><b>Street</b></td>'; 
echo '<td>&nbsp;</td>';
print '<td align="center"><b>City</b></td>'; 
echo '<td>&nbsp;</td>';
print '<td align="center"><b>State</b></td>'; 
echo '<td>&nbsp;</td>';
print '<td align="center"><b>Zip Code</b></td>'; 
echo '<td>&nbsp;</td>';
print '<td align="center"><b>Balance</b></td>';
echo '<td>&nbsp;</td>';
print '<td align="center"><b>Rep No.</b></td>';
print '<td align="center"><b>Credit Limit</b></td>';
print '</tr>'; 

  while ($row = mysql_fetch_array($r))
  {
    echo "<tr>";
      echo '<td><center>'.$row['CUSTOMER_NUM'].'</center></td>';
      echo '<td>&nbsp;</td>';
      echo '<td>'.$row['CUSTOMER_NAME'].'</td>';
      echo '<td>&nbsp;</td>';
      echo '<td><center>'.$row['STREET'].'</center></td>';
      echo '<td>&nbsp;</td>';
      echo '<td><center>'.$row['CITY'].'</center></td>';
      echo '<td>&nbsp;</td>';
      echo '<td><center>'.$row['STATE'].'</center></td>';
      echo '<td>&nbsp;</td>';
      echo '<td><center>'.$row['ZIP'].'</center></td>';
      echo '<td>&nbsp;</td>';
      echo '<td><center>'.$row['BALANCE'].'</center></td>';
      echo '<td>&nbsp;</td>';
      echo '<td><center>'.$row['REP_NUM'].'</center></td>';
      echo '<td align="right">'.$row['CREDIT_LIMIT'].'</td>';
    echo "</tr>";
    }
    print '</table></font>';

   echo '<br/>';
   echo '<br/>';
   echo '<br/>';
   echo '<br/>';
   echo '<form name="again" action="custQ2.php" method="get">';
   echo '<center><input type="submit" style="border:none;" class="custReturn" value="Click here to enter a different state"></center>';
   echo '</form>';
  }

  else{
  //generate error message
  $error='ERROR: The state abbreviation you entered does not appear in our records!';
  //if any field is blank, form is redisplayed. 
  echo renderForm($state, $error);
  }
}
}
}

else{
  //if the form hasn't been submitted, display the form
echo renderForm('', NULL);
}

